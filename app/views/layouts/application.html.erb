<!DOCTYPE html>
<html>
  <head>
    <title>BackYardsCoffeeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=EB+Garamond|Lobster" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <link rel="stylesheet" href="https://use.fontawesome.com/93160d36b8.css">

  </head>

  <body>

    <div class="navbar-fixed">
      <nav class=<%= 'nav-extended' if @dashboard %>>
        <div class="nav-wrapper black">
          <a href="/" class="brand-logo"><%=image_tag("logo_beige_transparent.png", size: "219x65", alt: "logo")%></a>
          <ul id="nav-mobile black" class="right hide-on-med-and-down">
            <li class="selected"><a href="/coffee_club">Coffee Club</a></li>
            <li><a href="/products">Products</a></li>
            <li><a href="/coffee_house">Coffee House</a></li>
            <li><a href="/about">Who we are</a></li>
            <% if current_customer || current_employee %>
              <li><a class='dropdown-button' href='#' data-activates='account-dropdown'><i class="material-icons">perm_identity</i></a></li>
            <% else %>
              <li><a class=<%= request.url.include?('sign_in') ? 'disabled' : 'active' %> href="/customers/sign_in">Login</a></li>
            <% end %>
            <li><a href="#"><i class="material-icons">shopping_cart</i></a></li>
          </ul>
        </div>
        <% if @dashboard %>
        <div class="nav-content black">
          <ul class="tabs tabs-transparent">
            <li class="tab"><a class="active" href="#subscriptions">Subscriptions</a></li>
            <li class="tab"><a href="#account-info">Account Info</a></li>
            <li class="tab"><a href="#test3">Test 3</a></li>
          </ul>
        </div>
        <% end %>
      </nav>
    </div>

    <%= render "layouts/alerts" %> 
    
    <%= yield %>
    <!-- Extended Nav-bar content -->
    <% if @dashboard %>
      <div id="subscriptions" class="col s12"><%= render "/customers/subscriptions" %></div>
      <div id="account-info" class="col s12"><%= render "/customers/account-info" %></div>
      <div id="test3" class="col s12">Test 3</div>
    <% end %>
    <footer class="page-footer teal">
    <div class="container">
      <div class="row">
        <div class="col l6 s12">
        </div>
        <div class="col l3 s12">
          <h5 class="white-text" align="middle">Connect with Us</h5>
          <ul>
          <td>
            <i class="fa fa-facebook fa-3x" aria-hidden="true"></i>&nbsp;&nbsp;
            <i class="fa fa-instagram fa-3x" aria-hidden="false"></i>&nbsp;&nbsp;
            <i class="fa fa-twitter fa-3x" aria-hidden="true"></i>
          </td>

           
          </ul>
        </div>
      </div>
    </div>
    <div class="footer-copyright">
      <div class="container">
      <a class="white-text" href="https://twitter.com/theyards_coffee?lang=en"> &copy; 2017 Back of the Yards Coffee Co. All rights reserved.</a> 
      <br>
      312.487.CAFE
      </div>
    </div>
  </footer>
  <!-- Dropdown Structure -->
  <ul style="margin-top:64px;min-width:160px;" id='account-dropdown' class='dropdown-content'>
    <li style="text-align: center;"><a href="/customers/dashboard">My Account</a></li>
    <li class="divider"></li>
    <% if current_customer %>
      <li style="text-align: center;"><%= link_to "Sign out", destroy_customer_session_path, :method => :delete %></li>
    <% elsif current_employee %>
      <li style="text-align: center;"><%= link_to "Sign out", destroy_employee_session_path, :method => :delete %></li>
    <% end %>
  </ul>
  </body>
</html>
